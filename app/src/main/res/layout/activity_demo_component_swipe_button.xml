<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoComponentSwipeButton">

    <com.nicco.motionlayoutexamples.SwipeButton
        android:layout_width="match_parent"
        android:id="@+id/swipeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"/>

    <com.nicco.motionlayoutexamples.SwipeButton
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/swipeButton2"
        app:primary_text="@string/desliza_para_avanzar"
        app:secondary_text="@string/todo_hecho"
        app:layout_constraintTop_toBottomOf="@id/swipeButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"/>

    <com.nicco.motionlayoutexamples.SwipeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipeButton3"
        android:layout_marginTop="20dp"
        app:primary_text="@string/dont_do_that"
        app:secondary_text="@string/you_did"
        app:layout_constraintTop_toBottomOf="@id/swipeButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>